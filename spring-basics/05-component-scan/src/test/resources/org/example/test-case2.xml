<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.example.case2"/>

    <bean id="micha" class="org.example.case2.Person">
        <constructor-arg index="0" value="micha"/>
        <constructor-arg index="1" value="28"/>
    </bean>

    <bean id="myRoom202" class="org.example.case2.Room">
        <constructor-arg index="0" value="202"/>
    </bean>
</beans>